<Window x:Class="DataMiningGUI.FilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataMiningGUI"
        mc:Ignorable="d"
        Title="Advanced Filter Builder" Height="500" Width="800"
        WindowStartupLocation="CenterOwner"
        ShowInTaskbar="False"
        ResizeMode="CanResizeWithGrip"
        MinHeight="350" MinWidth="600">

    <Window.Resources>
        <!-- ComboBox Style -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- TextBox Style -->
        <Style x:Key="FilterTextBoxStyle" TargetType="TextBox">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <!-- Button Style -->
        <Style x:Key="FilterButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="MinWidth" Value="60"/>
        </Style>

        <!-- Row Button Style -->
        <Style x:Key="RowButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="Width" Value="24"/>
            <Setter Property="Height" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4A90D9" Padding="15,10">
            <StackPanel>
                <TextBlock Text="Advanced Filter Builder" FontSize="18" FontWeight="SemiBold" Foreground="White"/>
                <TextBlock Text="Build complex filters with AND/OR logic. Use '!' prefix in values for NOT operations." 
                           FontSize="11" Foreground="#E0E0E0" Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Filter Criteria List -->
        <Border Grid.Row="1" Margin="10" BorderBrush="#CCCCCC" BorderThickness="1" Background="#FAFAFA">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Column Headers -->
                <Border Grid.Row="0" Background="#E8E8E8" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
                    <Grid Margin="5,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="*" MinWidth="120"/>
                            <ColumnDefinition Width="1.5*" MinWidth="150"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Field" FontWeight="SemiBold" Margin="5,0"/>
                        <TextBlock Grid.Column="2" Text="Operator" FontWeight="SemiBold" Margin="5,0"/>
                        <TextBlock Grid.Column="3" Text="Value" FontWeight="SemiBold" Margin="5,0"/>
                        <TextBlock Grid.Column="4" Text="Logic" FontWeight="SemiBold" Margin="5,0"/>
                        <TextBlock Grid.Column="5" Text="Actions" FontWeight="SemiBold" Margin="5,0"/>
                    </Grid>
                </Border>

                <!-- Scrollable Criteria List -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="CriteriaItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Background="White">
                                    <Grid Margin="5,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="*" MinWidth="120"/>
                                            <ColumnDefinition Width="*" MinWidth="120"/>
                                            <ColumnDefinition Width="1.5*" MinWidth="150"/>
                                            <ColumnDefinition Width="80"/>
                                            <ColumnDefinition Width="60"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Enable/Disable Checkbox -->
                                        <CheckBox Grid.Column="0" 
                                                  IsChecked="{Binding IsEnabled}" 
                                                  VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"
                                                  ToolTip="Enable/Disable this criterion"/>

                                        <!-- Field Selection -->
                                        <ComboBox Grid.Column="1" 
                                                  ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=FieldItems}"
                                                  SelectedValue="{Binding Field}"
                                                  SelectedValuePath="Value"
                                                  DisplayMemberPath="Description"
                                                  Style="{StaticResource FilterComboBoxStyle}"/>

                                        <!-- Operator Selection -->
                                        <ComboBox Grid.Column="2" 
                                                  ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=OperatorItems}"
                                                  SelectedValue="{Binding Operator}"
                                                  SelectedValuePath="Value"
                                                  DisplayMemberPath="Description"
                                                  Style="{StaticResource FilterComboBoxStyle}"/>

                                        <!-- Value Input -->
                                        <TextBox Grid.Column="3" 
                                                 Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{StaticResource FilterTextBoxStyle}"
                                                 ToolTip="Enter filter value. Use '!' prefix for NOT."/>

                                        <!-- Logic Operator -->
                                        <ComboBox Grid.Column="4" 
                                                  ItemsSource="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=LogicalOperatorItems}"
                                                  SelectedValue="{Binding LogicalOperator}"
                                                  SelectedValuePath="Value"
                                                  DisplayMemberPath="Description"
                                                  Style="{StaticResource FilterComboBoxStyle}"/>

                                        <!-- Remove Button -->
                                        <Button Grid.Column="5" 
                                                Content="âœ•" 
                                                Style="{StaticResource RowButtonStyle}"
                                                Click="RemoveCriterion_Click"
                                                Tag="{Binding}"
                                                ToolTip="Remove this criterion"
                                                Foreground="#D32F2F"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty State -->
                <TextBlock x:Name="EmptyStateText" 
                           Grid.Row="1" 
                           Text="No filter criteria added. Click 'Add Criterion' to start building your filter."
                           HorizontalAlignment="Center" 
                           VerticalAlignment="Center"
                           Foreground="#888888"
                           FontStyle="Italic"
                           Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Quick Add Panel -->
        <Border Grid.Row="2" Background="#F5F5F5" Padding="10,8" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="+ Add Criterion" 
                            Click="AddCriterion_Click" 
                            Style="{StaticResource FilterButtonStyle}"
                            Background="#4CAF50" 
                            Foreground="White"/>
                    <Button Content="Clear All" 
                            Click="ClearAll_Click" 
                            Style="{StaticResource FilterButtonStyle}"
                            Margin="10,2,2,2"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="Preview: " VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBlock x:Name="PreviewCountText" Text="0 matches" VerticalAlignment="Center" FontWeight="Bold"/>
                    <Button Content="Preview" 
                            Click="Preview_Click" 
                            Style="{StaticResource FilterButtonStyle}"
                            Margin="10,2,2,2"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <Border Grid.Row="3" Background="#E8E8E8" Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock x:Name="FilterSummaryText" 
                               Text="No filter active" 
                               VerticalAlignment="Center" 
                               Foreground="#666666"/>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <Button Content="Apply Filter" 
                            Click="ApplyFilter_Click" 
                            Style="{StaticResource FilterButtonStyle}"
                            Background="#2196F3" 
                            Foreground="White"
                            MinWidth="100"/>
                    <Button Content="Cancel" 
                            Click="Cancel_Click" 
                            Style="{StaticResource FilterButtonStyle}"
                            IsCancel="True"
                            MinWidth="80"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
