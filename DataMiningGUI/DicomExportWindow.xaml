<Window x:Class="DataMiningGUI.DicomExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DataMiningGUI"
        Title="DICOM Export" Height="700" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>
        <Style x:Key="CheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="4,2"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,12">
            <TextBlock Text="DICOM Export" FontSize="20" FontWeight="Bold" Foreground="#1976D2"/>
            <TextBlock Text="Select patients, examinations, and data types to export" 
                       Foreground="#666666" Margin="0,4,0,0"/>
        </StackPanel>
        
        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="220"/>
            </Grid.ColumnDefinitions>
            
            <!-- Patient/Examination Selection TreeView -->
            <Border Grid.Column="0" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" 
                    CornerRadius="4" Margin="0,0,12,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <!-- Select All Header -->
                    <Border Grid.Row="0" Background="#FAFAFA" BorderBrush="#EEEEEE" 
                            BorderThickness="0,0,0,1" Padding="12,8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="SelectAllCheckBox" Content="Select All Patients" 
                                      Style="{StaticResource CheckBoxStyle}"
                                      Click="SelectAllCheckBox_Click"/>
                            <StackPanel Grid.Column="2" Orientation="Horizontal">
                                <Button Content="Expand All" Click="ExpandAll_Click" 
                                        Padding="8,4" Margin="0,0,4,0" FontSize="11"/>
                                <Button Content="Collapse All" Click="CollapseAll_Click" 
                                        Padding="8,4" FontSize="11"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    
                    <!-- TreeView for Patient/Examination Selection -->
                    <TreeView x:Name="PatientTreeView" Grid.Row="1" BorderThickness="0"
                              Padding="8" Background="Transparent">
                        <TreeView.ItemContainerStyle>
                            <Style TargetType="TreeViewItem">
                                <Setter Property="IsExpanded" Value="False"/>
                                <Setter Property="Padding" Value="2"/>
                            </Style>
                        </TreeView.ItemContainerStyle>
                        <TreeView.Resources>
                            <!-- Patient Template -->
                            <HierarchicalDataTemplate DataType="{x:Type local:ExportPatientItem}" 
                                                      ItemsSource="{Binding Courses}">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsSelected}" 
                                              Click="PatientCheckBox_Click"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="[P]" Margin="4,0,6,0" FontSize="12" 
                                               Foreground="#1976D2" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                            
                            <!-- Course Template -->
                            <HierarchicalDataTemplate DataType="{x:Type local:ExportCourseItem}" 
                                                      ItemsSource="{Binding Examinations}">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsSelected}" 
                                              Click="CourseCheckBox_Click"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="[C]" Margin="4,0,6,0" FontSize="11" 
                                               Foreground="#FF9800" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding CourseName}"/>
                                </StackPanel>
                            </HierarchicalDataTemplate>
                            
                            <!-- Examination Template -->
                            <DataTemplate DataType="{x:Type local:ExportExaminationItem}">
                                <StackPanel Orientation="Horizontal">
                                    <CheckBox IsChecked="{Binding IsSelected}" 
                                              Click="ExaminationCheckBox_Click"
                                              VerticalAlignment="Center"/>
                                    <TextBlock Text="[E]" Margin="4,0,6,0" FontSize="11" 
                                               Foreground="#4CAF50" FontWeight="Bold"/>
                                    <TextBlock Text="{Binding ExamName}"/>
                                    <TextBlock Text="{Binding AssociatedPlansText}" 
                                               Foreground="#888888" Margin="8,0,0,0" FontSize="11"/>
                                    <TextBlock Text="{Binding AssociatedRegistrationsText}" 
                                               Foreground="#9C27B0" Margin="4,0,0,0" FontSize="11"/>
                                </StackPanel>
                            </DataTemplate>
                        </TreeView.Resources>
                    </TreeView>
                </Grid>
            </Border>
            
            <!-- Export Options Panel -->
            <Border Grid.Column="1" Background="White" BorderBrush="#DDDDDD" 
                    BorderThickness="1" CornerRadius="4" Padding="16">
                <StackPanel>
                    <TextBlock Text="Export Options" Style="{StaticResource SectionHeader}"/>
                    
                    <TextBlock Text="Data Types to Export:" FontWeight="Medium" 
                               Margin="0,0,0,8" Foreground="#555555"/>
                    
                    <CheckBox x:Name="ExportExaminationCheckBox" Content="Examination"
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="ExportStructureCheckBox" Content="Structure Set"
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="ExportPlanCheckBox" Content="RT Plan"
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="ExportDoseCheckBox" Content="RT Dose"
                              Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                    <CheckBox x:Name="ExportRegistrationsCheckBox" Content="Registrations (+ Images)"
                              Style="{StaticResource CheckBoxStyle}" IsChecked="False"
                              Checked="ExportRegistrationsCheckBox_CheckChanged"
                              Unchecked="ExportRegistrationsCheckBox_CheckChanged"
                              ToolTip="Export registrations and their associated source images"/>

                    <!-- Registration Modality Sub-options -->
                    <StackPanel x:Name="RegistrationModalityPanel" Margin="20,0,0,0" Visibility="Collapsed">
                        <TextBlock Text="Source Image Modalities:" FontSize="11" Foreground="#666666" Margin="0,4,0,4"/>
                        <CheckBox x:Name="ExportRegCTCheckBox" Content="CT"
                                  Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                        <CheckBox x:Name="ExportRegMRCheckBox" Content="MR"
                                  Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                        <CheckBox x:Name="ExportRegPETCheckBox" Content="PET"
                                  Style="{StaticResource CheckBoxStyle}" IsChecked="True"/>
                        <CheckBox x:Name="ExportRegCBCTCheckBox" Content="CBCT"
                                  Style="{StaticResource CheckBoxStyle}" IsChecked="False"/>
                    </StackPanel>

                    <Separator Margin="0,12"/>

                    <CheckBox x:Name="AnonymizeCheckBox" Content="Anonymize?"
                              Style="{StaticResource CheckBoxStyle}" IsChecked="False"
                              ToolTip="Anonymize patient demographics before saving. UIDs (FrameOfReference, Study, Series, SOP) are preserved."/>

                    <Separator Margin="0,12"/>
                    
                    <TextBlock Text="DICOM Connection" Style="{StaticResource SectionHeader}"/>
                    
                    <TextBlock Text="Remote AE Title:" FontSize="11" Foreground="#666666"/>
                    <TextBox x:Name="RemoteAETitleTextBox" Text="VMSDBD" Margin="0,2,0,8"/>
                    
                    <TextBlock Text="Remote IP:" FontSize="11" Foreground="#666666"/>
                    <TextBox x:Name="RemoteIPTextBox" Text="10.196.17.156" Margin="0,2,0,8"/>
                    
                    <TextBlock Text="Remote Port:" FontSize="11" Foreground="#666666"/>
                    <TextBox x:Name="RemotePortTextBox" Text="51402" Margin="0,2,0,8"/>
                    
                    <TextBlock Text="Local AE Title:" FontSize="11" Foreground="#666666"/>
                    <TextBox x:Name="LocalAETitleTextBox" Text="QR_PHI_EVAL3" Margin="0,2,0,8"/>
                    
                    <TextBlock Text="Local Port:" FontSize="11" Foreground="#666666"/>
                    <TextBox x:Name="LocalPortTextBox" Text="54323" Margin="0,2,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Export Folder Selection -->
        <Border Grid.Row="2" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" 
                CornerRadius="4" Padding="12" Margin="0,12,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Text="Export Folder:" VerticalAlignment="Center" 
                           FontWeight="Medium" Margin="0,0,12,0"/>
                <TextBox x:Name="ExportFolderTextBox" Grid.Column="1" 
                         VerticalAlignment="Center" Padding="8,6"
                         Text="\\ad.ucsd.edu\ahs\CANC\RADONC\BMAnderson\DicomExport"/>
                <Button Grid.Column="2" Content="Browse..." Click="BrowseFolder_Click"
                        Style="{StaticResource ButtonStyle}" Margin="8,0,0,0"/>
            </Grid>
        </Border>
        
        <!-- Progress Area -->
        <Border Grid.Row="3" Background="White" BorderBrush="#DDDDDD" BorderThickness="1" 
                CornerRadius="4" Padding="12" Margin="0,12,0,0"
                x:Name="ProgressPanel" Visibility="Collapsed">
            <StackPanel>
                <TextBlock x:Name="ProgressText" Text="Exporting..." Margin="0,0,0,8"/>
                <ProgressBar x:Name="ExportProgressBar" Height="20" Minimum="0" Maximum="100"/>
                <TextBlock x:Name="ProgressDetailText" Text="" Foreground="#666666" 
                           FontSize="11" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>
        
        <!-- Action Buttons -->
        <Grid Grid.Row="4" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="SelectionSummaryText" VerticalAlignment="Center" 
                       Foreground="#666666" Text="0 examinations selected"/>
            
            <Button Grid.Column="2" x:Name="CancelButton" Content="Cancel" 
                    Style="{StaticResource ButtonStyle}" Click="CancelButton_Click"
                    Width="150" Margin="0,0,8,0"/>
            <Button Grid.Column="3" x:Name="ExportButton" Content="Export" 
                    Style="{StaticResource ButtonStyle}" Click="ExportButton_Click"
                    Width="150" Background="#1976D2" Foreground="White"/>
        </Grid>
    </Grid>
</Window>
