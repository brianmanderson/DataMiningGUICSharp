<Window x:Class="DataMiningGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DataMiningGUI"
        mc:Ignorable="d"
        Title="Data Mining GUI - Patient Browser" Height="650" Width="1150"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="FolderCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>

        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="12,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="MinWidth" Value="80"/>
        </Style>
        
        <Style x:Key="PaginationButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Margin" Value="3,0"/>
            <Setter Property="MinWidth" Value="30"/>
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header Section with Folder Selection -->
        <Border Grid.Row="0" Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Select Database Folders:" Style="{StaticResource HeaderTextStyle}"/>
                
                <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" MaxHeight="60">
                    <ItemsControl x:Name="FolderCheckBoxPanel">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Load Button and Progress -->
                <Border Grid.Row="2" Padding="10,5" Background="#E8E8E8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="LoadPatientsButton" 
                                Grid.Column="0"
                                Content="ðŸ“‚ Load Patients" 
                                Click="LoadPatients_Click"
                                Style="{StaticResource ActionButtonStyle}"
                                Background="#4CAF50"
                                Foreground="White"
                                FontWeight="SemiBold"
                                MinWidth="120"/>

                        <Button x:Name="CancelLoadButton" 
                                Grid.Column="1"
                                Content="Cancel" 
                                Click="CancelLoad_Click"
                                Style="{StaticResource ActionButtonStyle}"
                                Visibility="Collapsed"/>

                        <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0,0,0">
                            <TextBlock x:Name="LoadProgressText" Text="" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <ProgressBar x:Name="LoadProgressBar" Width="200" Height="18" 
                                         Minimum="0" Maximum="100" Value="0" Visibility="Collapsed"/>
                        </StackPanel>

                        <TextBlock Grid.Column="3" x:Name="SelectedFilesText" Text="0 files selected" 
                                   VerticalAlignment="Center" Foreground="#666666"/>
                    </Grid>
                </Border>
            </Grid>
        </Border>

        <!-- Search/Filter Section -->
        <Border Grid.Row="1" Background="#FAFAFA" BorderBrush="#CCCCCC" BorderThickness="0,0,0,1" Padding="10,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="Search MRN:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <TextBox x:Name="SearchTextBox" Grid.Column="1" VerticalContentAlignment="Center" 
                         TextChanged="SearchTextBox_TextChanged" Height="26"/>
                <Button x:Name="ClearSearchButton" Grid.Column="2" Content="Clear" Margin="5,0,0,0" 
                        Padding="10,3" Click="ClearSearchButton_Click"/>
                <!-- Filter Buttons -->
                <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="20,0,0,0">
                    <Button x:Name="OpenFilterButton" 
                            Content="ðŸ”Â Advanced Filter..." 
                            Click="OpenFilter_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#2196F3"
                            Foreground="White"/>
                    <Button x:Name="ClearFilterButton" 
                            Content="Clear Filter" 
                            Click="ClearFilter_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Visibility="Collapsed"/>
                    <Button x:Name="ExportButton" 
                            Content="ðŸ“¤ Export Data" 
                            Click="Export_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#FF9800"
                            Foreground="White"
                            FontWeight="SemiBold"
                            ToolTip="Export filtered data to CSV"/>

                    <Button x:Name="ExportDicomButton" 
                            Content="ðŸ“¤ Export DICOM" 
                            Click="ExportDicom_Click"
                            Style="{StaticResource ActionButtonStyle}"
                            Background="#FF9800"
                            Foreground="White"
                            FontWeight="SemiBold"
                            ToolTip="Export filtered data as DICOM"/>

                </StackPanel>

                <!-- Display Count and Pagination Controls -->
                <StackPanel Grid.Column="5" Orientation="Horizontal">
                    <TextBlock Text="Displaying: " VerticalAlignment="Center"/>
                    <TextBlock x:Name="DisplayCountText" Text="0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text=" of " VerticalAlignment="Center"/>
                    <TextBlock x:Name="TotalCountText" Text="0" VerticalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock Text=" plans" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    
                    <!-- Pagination Controls -->
                    <StackPanel x:Name="PaginationPanel" Orientation="Horizontal" Visibility="Collapsed">
                        <Border BorderBrush="#CCCCCC" BorderThickness="1,0,0,0" Padding="15,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="FirstPageButton" 
                                        Content="â®" 
                                        ToolTip="First Page"
                                        Click="FirstPage_Click"
                                        Style="{StaticResource PaginationButtonStyle}"/>
                                <Button x:Name="PrevPageButton" 
                                        Content="â—€" 
                                        ToolTip="Previous Page"
                                        Click="PrevPage_Click"
                                        Style="{StaticResource PaginationButtonStyle}"/>
                                
                                <TextBlock Text="Page " VerticalAlignment="Center" Margin="8,0,3,0"/>
                                <TextBlock x:Name="CurrentPageText" Text="1" VerticalAlignment="Center" FontWeight="Bold"/>
                                <TextBlock Text=" of " VerticalAlignment="Center" Margin="3,0"/>
                                <TextBlock x:Name="TotalPagesText" Text="1" VerticalAlignment="Center" FontWeight="Bold"/>
                                
                                <Button x:Name="NextPageButton" 
                                        Content="â–¶" 
                                        ToolTip="Next Page"
                                        Click="NextPage_Click"
                                        Style="{StaticResource PaginationButtonStyle}"
                                        Margin="8,0,3,0"/>
                                <Button x:Name="LastPageButton" 
                                        Content="â­" 
                                        ToolTip="Last Page"
                                        Click="LastPage_Click"
                                        Style="{StaticResource PaginationButtonStyle}"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Active Filter Indicator -->
        <Border x:Name="ActiveFilterBorder" Grid.Row="2" Background="#FFF3E0" BorderBrush="#FFB74D" 
                BorderThickness="0,0,0,1" Padding="10,6" Visibility="Collapsed">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="âš  Filter Active: " FontWeight="SemiBold" 
                           Foreground="#E65100" VerticalAlignment="Center"/>
                <TextBlock x:Name="ActiveFilterText" Grid.Column="1" Text="" 
                           Foreground="#E65100" VerticalAlignment="Center" TextTrimming="CharacterEllipsis"/>
                <Button Grid.Column="2" Content="X Remove" Click="ClearFilter_Click" 
                        Padding="8,2" Background="Transparent" BorderThickness="0"
                        Foreground="#E65100" Cursor="Hand"/>
            </Grid>
        </Border>

        <!-- Loaded Patients Info -->
        <Border x:Name="LoadedInfoBorder" Grid.Row="3" Background="#E3F2FD" BorderBrush="#90CAF9" 
                BorderThickness="0,0,0,1" Padding="10,4" Visibility="Collapsed">
            <TextBlock x:Name="LoadedInfoText" Text="" Foreground="#1565C0"/>
        </Border>

        <!-- Patient Data Grid -->
        <DataGrid x:Name="PatientDataGrid" Grid.Row="4" 
                  AutoGenerateColumns="False" 
                  IsReadOnly="True"
                  SelectionMode="Single"
                  AlternatingRowBackground="#F9F9F9"
                  GridLinesVisibility="Horizontal"
                  HeadersVisibility="Column"
                  CanUserSortColumns="True"
                  CanUserReorderColumns="True"
                  CanUserResizeColumns="True"
                  Margin="5">
            <DataGrid.Columns>
                <DataGridTextColumn Header="MRN" Binding="{Binding MRN}" Width="100"/>
                <DataGridTextColumn Header="Patient Name" Binding="{Binding PatientName}" Width="140"/>
                <DataGridTextColumn Header="Course" Binding="{Binding CourseName}" Width="100"/>
                <DataGridTextColumn Header="Plan Name" Binding="{Binding PlanName}" Width="140"/>
                <DataGridTextColumn Header="Plan Type" Binding="{Binding PlanType}" Width="90"/>
                <DataGridTextColumn Header="Machine" Binding="{Binding MachineName}" Width="90"/>
                <DataGridTextColumn Header="Fractions" Binding="{Binding NumberOfFractions}" Width="70"/>
                <DataGridTextColumn Header="Dose/Fx (cGy)" Binding="{Binding DosePerFraction}" Width="90"/>
                <DataGridTextColumn Header="Total (cGy)" Binding="{Binding TotalDose}" Width="80"/>
                <DataGridTextColumn Header="Planned By" Binding="{Binding PlannedBy}" Width="90"/>
                <DataGridTextColumn Header="Status" Binding="{Binding ApprovalStatus}" Width="100"/>
                <DataGridTextColumn Header="Review Date" Binding="{Binding ReviewDateTime}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Status Bar -->
        <Border Grid.Row="5" Background="#E8E8E8" BorderBrush="#CCCCCC" BorderThickness="0,1,0,0">
            <Grid Margin="10,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock x:Name="StatusText" Grid.Column="0" Text="Ready - Select folders and click 'Load Patients'" VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</Window>
